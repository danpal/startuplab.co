= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this promotion from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Admin"
    = f.radio_button(:admin, "true")
    = f.label(:admin_button, "True")
    = f.radio_button(:admin, "false")
    = f.label(:admin_button, "False")
  .field
    .actions
      = f.submit
  
    
